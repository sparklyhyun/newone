<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.hyunjeong.district132.CreatePost">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_create_post"
    android:layout_width="368dp"
    android:layout_height="495dp"
    tools:layout_editor_absoluteY="8dp"
    tools:layout_editor_absoluteX="8dp">

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/locationspinner"
        android:layout_alignLeft="@+id/rentradiobtn"
        android:layout_alignStart="@+id/rentradiobtn" />

    <TextView
        android:text="Address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/locationspinner"
        android:layout_alignLeft="@+id/textView"
        android:layout_alignStart="@+id/textView"
        android:layout_marginTop="23dp"
        android:id="@+id/Address"
        android:textSize="20sp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/AddressEt"
        android:hint="Type in the address"
        android:layout_below="@+id/Address"
        android:layout_alignLeft="@+id/Address"
        android:layout_alignStart="@+id/Address"
        android:singleLine="false" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/numberofroomspinner"
        android:layout_alignTop="@+id/Rooms"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="15dp"
        android:layout_marginEnd="15dp"
        android:entries="@array/rooms"
        android:spinnerMode="dropdown"/>

    <RadioButton
        android:text="For Sale"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/rentradiobtn"
        android:layout_alignTop="@+id/saleradiobtn"
        android:layout_alignLeft="@+id/textView"
        android:layout_alignStart="@+id/textView" />

    <RadioButton
        android:text="For Rent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/saleradiobtn"
        android:layout_marginLeft="14dp"
        android:layout_marginStart="14dp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/Rooms"
        android:layout_toEndOf="@+id/Rooms"
        android:layout_marginTop="26dp" />

    <TextView
        android:text="Location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="26dp"
        android:layout_marginStart="26dp"
        android:layout_marginTop="26dp"
        android:id="@+id/textView"
        android:textSize="20sp"
        android:layout_below="@+id/rentradiobtn"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/locationspinner"
        android:minWidth="40dp"
        android:layout_marginRight="21dp"
        android:layout_marginEnd="21dp"
        android:entries="@array/locations"
        android:spinnerMode="dropdown"
        android:layout_alignTop="@+id/textView"
        android:layout_alignRight="@+id/numberofroomspinner"
        android:layout_alignEnd="@+id/numberofroomspinner" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/typespinner"
        android:entries="@array/type"
        android:spinnerMode="dropdown"
        android:layout_alignBaseline="@+id/Type"
        android:layout_alignBottom="@+id/Type"
        android:layout_alignLeft="@+id/locationspinner"
        android:layout_alignStart="@+id/locationspinner" />

    <TextView
        android:text="Type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Type"
        android:textSize="20sp"
        android:layout_marginTop="13dp"
        android:layout_below="@+id/AddressEt"
        android:layout_alignLeft="@+id/AddressEt"
        android:layout_alignStart="@+id/AddressEt" />

    <TextView
        android:text="Number of rooms"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="29dp"
        android:id="@+id/Rooms"
        android:textSize="20sp"
        android:layout_below="@+id/typespinner"
        android:layout_alignLeft="@+id/Type"
        android:layout_alignStart="@+id/Type" />

    <TextView
        android:text="Size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:id="@+id/textView5"
        android:textSize="20sp"
        android:layout_below="@+id/Rooms"
        android:layout_alignRight="@+id/Type"
        android:layout_alignEnd="@+id/Type" />

    <Button
        android:text="Submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/uploadphotosbtn"
        android:id="@+id/submitbtn"
        android:layout_alignLeft="@+id/uploadphotosbtn"
        android:layout_alignStart="@+id/uploadphotosbtn"
        android:layout_alignRight="@+id/uploadphotosbtn"
        android:layout_alignEnd="@+id/uploadphotosbtn"
        android:textSize="16sp"
        android:onClick="newPost"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/price"
        android:layout_alignLeft="@+id/textView2"
        android:layout_alignStart="@+id/textView2"
        android:id="@+id/textView3" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_above="@+id/price"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/editText6"
        android:hint="Enter size in sqft" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/editText7"
        android:layout_alignBaseline="@+id/textView3"
        android:layout_alignBottom="@+id/textView3"
        android:layout_alignRight="@+id/numberofroomspinner"
        android:layout_alignEnd="@+id/numberofroomspinner" />

    <TextView
        android:text="Price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:id="@+id/price"
        android:textSize="20sp"
        android:layout_below="@+id/textView5"
        android:layout_alignLeft="@+id/textView5"
        android:layout_alignStart="@+id/textView5" />

    <Button
        android:text="Upload Photos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/uploadphotosbtn"
        android:textSize="12sp"
        android:layout_below="@+id/textView3"
        android:layout_toRightOf="@+id/rentradiobtn"
        android:layout_toEndOf="@+id/rentradiobtn" />

</RelativeLayout>
</android.support.constraint.ConstraintLayout>