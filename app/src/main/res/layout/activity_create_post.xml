<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.hyunjeong.district132.CreatePost">


    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:fillViewport="true"
        android:scrollbarStyle="insideInset"
        android:scrollbars="vertical"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <RelativeLayout
            android:id="@+id/activity_create_post"
            android:layout_width="368dp"
            android:layout_height="495dp"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="8dp">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/Type"
                android:layout_alignRight="@+id/Type"
                android:layout_below="@+id/Rooms"
                android:layout_marginTop="28dp"
                android:text="Size"
                android:textSize="20sp" />

            <Spinner
                android:id="@+id/purpose"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:entries="@+array/salerent"
                android:spinnerMode="dropdown" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/purpose"
                android:layout_marginTop="37dp"
                android:text="Location"
                android:textSize="20sp" />

            <Spinner
                android:id="@+id/locationspinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"


                android:layout_alignBaseline="@+id/textView"
                android:layout_alignBottom="@+id/textView"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginEnd="43dp"
                android:layout_marginRight="43dp"
                android:entries="@array/locations"
                android:minWidth="40dp"
                android:spinnerMode="dropdown" />


            <TextView
                android:id="@+id/Address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/textView"
                android:layout_alignStart="@+id/textView"
                android:layout_below="@+id/locationspinner"
                android:layout_marginTop="23dp"
                android:text="Address"
                android:textSize="20sp" />


            <EditText
                android:id="@+id/AddressEt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/Address"
                android:layout_alignStart="@+id/Address"
                android:layout_below="@+id/Address"
                android:ems="10"
                android:hint="Type in the address"
                android:inputType="textMultiLine"
                android:singleLine="false" />

            <TextView
                android:id="@+id/Type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/AddressEt"
                android:layout_alignStart="@+id/AddressEt"
                android:layout_below="@+id/AddressEt"
                android:layout_marginTop="13dp"
                android:text="Type"
                android:textSize="20sp" />

            <Button
                android:id="@+id/submitbtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_below="@+id/editText7"
                android:layout_centerHorizontal="true"
                android:text="Submit"
                android:textSize="16sp"
                tools:layout_editor_absoluteX="143dp"
                tools:layout_editor_absoluteY="537dp" />

            <Spinner
                android:id="@+id/typespinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/Type"
                android:layout_alignBottom="@+id/Type"
                android:layout_alignLeft="@+id/locationspinner"
                android:layout_alignStart="@+id/locationspinner"
                android:entries="@array/type"
                android:spinnerMode="dropdown" />

            <TextView
                android:id="@+id/Rooms"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/Type"
                android:layout_alignStart="@+id/Type"
                android:layout_below="@+id/typespinner"
                android:layout_marginTop="29dp"
                android:text="Number of rooms"
                android:textSize="20sp" />

            <Spinner
                android:id="@+id/numberofroomspinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@+id/Rooms"
                android:layout_marginEnd="15dp"
                android:layout_marginRight="15dp"
                android:entries="@array/rooms"
                android:spinnerMode="dropdown" />


            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/Type"
                android:layout_alignRight="@+id/Type"
                android:layout_below="@+id/Rooms"
                android:layout_marginTop="28dp"
                android:text="Size"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/editText6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/textView5"
                android:layout_alignBottom="@+id/textView5"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:ems="10"
                android:hint="Enter size in sqft"
                android:inputType="textPersonName" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Description"
                android:textSize="20sp"
                android:layout_below="@+id/pricetv"
                android:layout_alignLeft="@+id/textView2"
                android:layout_alignStart="@+id/textView2"
                android:layout_marginTop="12dp" />

            <EditText
                android:id="@+id/editText7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter a short description about nearby facilities"
                android:layout_below="@+id/textView3"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <Spinner
                android:id="@+id/furnishing"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/furnish"
                android:layout_alignBottom="@+id/furnish"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:entries="@array/Furnishing"
                android:spinnerMode="dropdown">

            </Spinner>

            <TextView
                android:id="@+id/furnish"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/textView3"
                android:layout_alignStart="@+id/textView3"
                android:layout_below="@+id/editText6"
                android:layout_marginTop="17dp"
                android:text="Furnishing"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/pricetv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/textView"
                android:layout_alignLeft="@+id/textView3"
                android:layout_alignRight="@+id/textView"
                android:layout_alignStart="@+id/textView3"
                android:layout_below="@+id/furnishing"
                android:layout_marginTop="19dp"
                android:text="Price"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/editText8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:ems="10"
                android:inputType="number"
                android:layout_alignBottom="@+id/pricetv"
                android:layout_alignLeft="@+id/editText6"
                android:layout_alignStart="@+id/editText6" />


        </RelativeLayout>
    </ScrollView>


</android.support.constraint.ConstraintLayout>
