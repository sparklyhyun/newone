<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.hyunjeong.district132.LoggedIn">

    <RelativeLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/welcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:text="@string/Welcome"
            android:textSize="24sp" />

        <Spinner
            android:id="@+id/Type"
            android:layout_width="356dp"
            android:layout_height="23dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="209dp"
            android:entries="@array/Type"
            app:layout_constraintRight_toRightOf="parent"
            tools:layout_editor_absoluteY="112dp" />

        <Spinner
            android:id="@+id/SaleLease"
            android:layout_width="356dp"
            android:layout_height="23dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:entries="@array/SaleLease"
            app:layout_constraintRight_toRightOf="parent"
            tools:layout_editor_absoluteY="73dp" />

        <Spinner
            android:id="@+id/Location"

            android:layout_width="349dp"
            android:layout_height="26dp"

            android:layout_alignLeft="@+id/Type"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignStart="@+id/Type"
            android:layout_alignTop="@+id/Type"
            android:layout_marginTop="33dp"
            android:entries="@array/Location"
            android:gravity="center"
            app:layout_constraintLeft_toLeftOf="parent"
            tools:layout_editor_absoluteY="37dp" />

        <Button
            android:id="@+id/bcreateNewPost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/bViewPost"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="12dp"
            android:text="@string/createNewPost" />

        <Button
            android:id="@+id/bViewPost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/SaleLease"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="55dp"
            android:text="@string/viewMyPost" />

        <Button
            android:id="@+id/bSearch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Location"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="39dp"
            android:text="@string/searchUpButton" />

        <Button
            android:id="@+id/signOut"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/bSearch"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/bSearch"
            android:layout_marginBottom="14dp"
            android:text="@string/signOut" />

        <TextView
            android:id="@+id/displayUser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/welcome" />


    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
